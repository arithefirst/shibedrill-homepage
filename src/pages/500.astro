---
import Head from '../layouts/Head.astro';
import { Image } from 'astro:assets';
import CheesecakeAngry from '../images/angry-cheesecake.png';
---

<html lang="en">
  <Head title="Internal Error" description="500 - The server encountered an unexpected internal error." />
  <body class="h-screen w-screen">
    <div class="z-10 text-center w-fit h-fit absolute left-1/2 top-1/2 -translate-y-1/2 -translate-x-1/2">
      <div class="flex flex-col items-center justify-center w-fit h-fit">
        <Image
          src={CheesecakeAngry}
          alt="Cheesecake, the harbinger of the end times, but angry because of this 500"
          class="mx-auto w-3/4"
        />
        <h2 class="2xl font-bold">500 - The server encountered an unexpected internal error.</h2>
        <a href="/" class="btn btn-accent btn-sm px-4 mt-3">Go Home</a>
      </div>
    </div>
  </body>
</html>
